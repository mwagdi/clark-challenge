{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "universe", "plugin:react-hooks/recommended", "prettier"],
  "rules": {
    "prefer-arrow-callback": "error",
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }]
  }
}